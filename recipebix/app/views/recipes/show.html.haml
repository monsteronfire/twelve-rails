%h1= @recipe.title
%p= @recipe.description
= image_tag @recipe.image.url(:medium), class: "recipe_image"
= link_to "Back", root_path, class: "btn btn_default"
= link_to "Edit", edit_recipe_path, class: "btn btn_default"
= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure you want to delete this recipe?"}, class: "btn btn_default"