.container.post-wrapper
  - if user_signed_in?
      = link_to "Add An Acute Kitten", new_post_path, class: "btn  btn-default"
  #posts.transitions-enabled
    - @posts.each do |post|
      .box.panel.panel-default
        = image_tag attachment_url(post, :image, :fill, 300, 300, format: "jpg")
        h2= link_to post.title, post
        
        .panel-body
          p
            | Submitted by 
            = post.user.name
            
          p
            | on 
            = post.created_at.strftime("%A %d %b %Y")
          
          p
            = truncate(post.description, length: 200)

          p
            = post.comments.count 
            |  Comments

          p
            =post.get_likes.size 
            i.fa.fa-thumbs-up

          p
            =post.get_dislikes.size
            i.fa.fa-thumbs-down
